@model IEnumerable<AgendaMedicaMvc.Models.Agenda>

@{
    ViewData["Title"] = "Index";
}

<h2>Registro de Agendas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">Cadastrar nova agenda</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusDaAgenda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Medico.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paciente.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusDaAgenda)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" class="btn btn-info"asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" class="btn btn-info" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
