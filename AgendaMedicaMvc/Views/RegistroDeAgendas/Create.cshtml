@model AgendaMedicaMvc.Models.ViewModels.RegistroViewModel
@using AgendaMedicaMvc.Models.Enums;

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Nova Agenda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="registroDeAgenda.Agenda" class="control-label"></label>
                <select asp-for="registroDeAgenda.AgendaId" asp-items="@(new SelectList(Model.Agendas,"Id","Date"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="registroDeAgenda.StatusDaAgenda" class="control-label"></label>
            </div>
            <div>
                <select asp-for="registroDeAgenda.StatusDaAgenda" asp-items="Html.GetEnumSelectList<StatusDaAgenda>()"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" type="submit" value="Back to List" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
